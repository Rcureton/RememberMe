<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mom.rememberme.ContactsAddPage">


    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imageView2"
        android:src="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <LinearLayout
        android:layout_below="@id/imageView2"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/first_name_add"
            android:hint="First Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/last_name_add"
            android:hint="Last Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/cell_phone"
            android:hint="Cell Phone#"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/work_phone"
            android:hint="Work Phone #"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/email_address"
            android:hint="Email Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/address"
            android:hint="Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/linkedIn"
            android:hint="LinkedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/twitter_text"
            android:hint="Twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <ImageButton
        android:id="@+id/linkedInButton"
        android:src="@drawable/ic_action_linkedin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/twitter_add"
        android:layout_alignLeft="@+id/twitter_add"
        android:layout_alignStart="@+id/twitter_add" />
    <ImageButton
        android:id="@+id/twitter_add"
        android:src="@drawable/ic_action_twitter"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@+id/facebook"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout" />

    <ImageButton
        android:id="@+id/facebook"
        android:src="@drawable/ic_action_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
